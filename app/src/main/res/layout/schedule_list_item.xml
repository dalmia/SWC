<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notice_board_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <view
                android:id="@+id/upcoming_classes"
                style="@style/TextView.Title.Note"
                class="com.amandalmia.swc.helper.TextViewPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Upcoming Class"
                android:textColor="@color/colorPrimary"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold" />

            <view
                android:id="@+id/class_time"
                style="@style/TextView.Title.Note"
                class="com.amandalmia.swc.helper.TextViewPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|end"
                android:gravity="end"
                android:padding="10dp"
                tools:text="10-10:55 am"
                android:textColor="@color/blackPrimaryText"
                android:textSize="17sp" />

            <View
                android:id="@+id/divider_background"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@id/upcoming_classes"
                android:background="@color/appBackground" />


            <com.amandalmia.swc.helper.TextViewPlus

                android:id="@+id/dashboard_subject_name"
                style="@style/TextView.Title.Thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_classes"
                android:gravity="center_vertical"
                android:padding="10dp"
                tools:text="CS-101"
                android:textColor="@color/blackPrimaryText"
                android:textIsSelectable="false"
                android:textSize="17sp" />


            <com.amandalmia.swc.helper.TextViewPlus

                android:id="@+id/venue"
                style="@style/TextView.Title.Thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dashboard_subject_name"
                android:padding="10dp"
                tools:text="LT - 1"
                android:textColor="@color/blackPrimaryText"
                android:textIsSelectable="false"
                android:textSize="17sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>